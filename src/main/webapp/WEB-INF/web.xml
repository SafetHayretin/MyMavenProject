<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

    <servlet>
        <servlet-name>post</servlet-name>
        <servlet-class>Servlets.PostServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>authenticator</servlet-name>
        <servlet-class>Servlets.AuthenticatorServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>comment</servlet-name>
        <servlet-class>Servlets.CommentServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>user</servlet-name>
        <servlet-class>Servlets.UserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>post</servlet-name>
        <url-pattern>/posts</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>comment</servlet-name>
        <url-pattern>/comments</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>authenticator</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

</web-app>
